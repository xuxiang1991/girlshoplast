<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape_stoke"
    android:padding="8dp"
    >
    <TextView
        android:id="@+id/tv_isdefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认"
        android:textColor="@color/orange"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_isdefault"
        android:textColor="@color/App_order_set_bigText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/tv_isdefault"
        android:layout_toRightOf="@id/tv_name"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone"
        android:layout_marginTop="5dp"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_city"
        android:layout_marginTop="5dp"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail"
        android:layout_marginTop="5dp"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="编辑"
        android:textColor="@color/App_back_orange"
        android:textSize="16sp" />


</RelativeLayout>