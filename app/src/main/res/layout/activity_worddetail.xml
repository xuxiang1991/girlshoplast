<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_fragment_title"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_top"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="100/1"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@id/tv_count"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_word_grey_bg"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:layout_below="@id/tv_count"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_word_grey_bg"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_below="@id/tv_count"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_word_white_bg"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hire"
                android:textColor="@color/App_more_text_3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_play1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_word"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_choice_item_able"
                    android:drawableLeft="@drawable/icon_blue_play"
                    android:drawablePadding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="英"
                    android:textColor="@color/home_fragment_title"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/tv_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="hire_die"
                    android:textColor="@color/text_light_grey"
                    android:textSize="14sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_play2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_play1"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_choice_item_able"
                    android:drawableLeft="@drawable/icon_blue_play"
                    android:drawablePadding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="英"
                    android:textColor="@color/home_fragment_title"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/tv_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="hire_die"
                    android:textColor="@color/text_light_grey"
                    android:textSize="14sp"></TextView>
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/ll_play2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@color/text_light_grey"></View>

            <TextView
                android:id="@+id/tv_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:padding="16sp"
                android:text="hire_die"
                android:textColor="@color/text_light_grey"
                android:textSize="14sp"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_word_white_bg"
                android:gravity="center"
                android:padding="6dp"
                android:text="Hire"
                android:textColor="@color/App_more_text_3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_unknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_word_white_bg"
                android:gravity="center"
                android:padding="6dp"
                android:text="Hire"
                android:textColor="@color/App_more_text_3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_word_white_bg"
                android:gravity="center"
                android:padding="6dp"
                android:text="Hire"
                android:textColor="@color/App_more_text_3"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>