<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_backgroud_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_top"></include>

    <com.daocheng.girlshop.view.ScrollViewExtend
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rl_user"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:background="@drawable/bk_pic">
                <ImageView
                    android:id="@+id/myOwnRImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/headsculpture"/>
                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="快捷登录"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_myown">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="94dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/ll_center1">
                    <com.daocheng.girlshop.view.RoundImageView
                        android:id="@+id/iv_center1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        imagecontrol:border_outside_color="@color/App_layout_deliver"
                        android:layout_gravity="center_horizontal"
                        imagecontrol:border_thickness="0dp"
                        android:src="@drawable/myorder"/>
                    <TextView
                        android:id="@+id/tv_center1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的订单"
                        android:textSize="15dp"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="94dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:id="@+id/ll_center2">
                    <com.daocheng.girlshop.view.RoundImageView
                        android:id="@+id/iv_center2"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        imagecontrol:border_outside_color="@color/App_layout_deliver"
                        android:layout_gravity="center_horizontal"
                        imagecontrol:border_thickness="0dp"
                        android:src="@drawable/mycooker"/>
                    <TextView
                        android:id="@+id/tv_center2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的厨师"
                        android:textSize="15dp"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="94dp"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/ll_center3">
                    <com.daocheng.girlshop.view.RoundImageView
                        android:id="@+id/iv_center3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        imagecontrol:border_outside_color="@color/App_layout_deliver"
                        android:layout_gravity="center_horizontal"
                        imagecontrol:border_thickness="0dp"
                        android:src="@drawable/mycash"/>
                    <TextView
                        android:id="@+id/tv_center3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的礼包"
                        android:textSize="15dp"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_bottom0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_main_bottom"
                android:layout_marginBottom="7dp">
                <LinearLayout
                    android:id="@+id/ll_bottom1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:divider="@drawable/shape_dividerline"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="47.5dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/memberShipIV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/bemember"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7.5dp"/>
                        <TextView
                            android:id="@+id/tv_bottom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成为会员"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/memberShipIV"
                            android:layout_marginTop="17.5dp"
                            android:paddingLeft="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/info_detail"/>
                    </RelativeLayout>



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bottom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_main_bottom"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:divider="@drawable/shape_dividerline"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:id="@+id/activityCenterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="47.5dp">
                        <ImageView
                            android:id="@+id/activityCenterIV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/activitycenter"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7.5dp"/>
                        <TextView
                            android:id="@+id/tv_bottom2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="厨师招募"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/activityCenterIV"
                            android:layout_marginTop="17.5dp"
                            android:paddingLeft="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/info_detail"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/myCommentLayoout"
                        android:layout_width="match_parent"
                        android:layout_height="47.5dp">
                        <ImageView
                            android:id="@+id/myCommentIV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/mycomment"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7.5dp"/>
                        <TextView
                            android:id="@+id/tv_bottom3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的评论"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/myCommentIV"
                            android:layout_marginTop="17.5dp"
                            android:paddingLeft="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/info_detail"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="47.5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/scoreIV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/score"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7.5dp"/>
                        <TextView
                            android:id="@+id/tv_bottom4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评分"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/scoreIV"
                            android:layout_marginTop="17.5dp"
                            android:paddingLeft="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/info_detail"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_share"
                        android:layout_width="match_parent"
                        android:layout_height="47.5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/shareToFriendsIV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/share"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7.5dp"/>
                        <TextView
                            android:id="@+id/tv_bottom5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享给好友"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/shareToFriendsIV"
                            android:layout_marginTop="17.5dp"
                            android:paddingLeft="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/info_detail"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/moreLayout"
                        android:layout_width="match_parent"
                        android:layout_height="47.5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/moreIV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/more"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7.5dp"/>
                        <TextView
                            android:id="@+id/tv_bottom6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/moreIV"
                            android:layout_marginTop="17.5dp"
                            android:paddingLeft="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/info_detail"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.daocheng.girlshop.view.ScrollViewExtend>
</LinearLayout>