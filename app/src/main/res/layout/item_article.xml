<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_article"
    android:layout_width="match_parent"
    android:background="@drawable/white_bg"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/App_order_name"
        android:textSize="@dimen/app_text_big"

        />
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/tv_title"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="8dp"
        android:background="@android:color/white"
        android:layout_toRightOf="@id/iv_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="6dp"
            android:gravity="left|center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@color/App_actvitytext_grey"
            android:lines="2"
            android:maxLines="3"
            android:textSize="@dimen/app_text_small"/>


    </LinearLayout>

    <Button
        android:id="@+id/bt_hehe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/list_article_hehe"
        android:gravity="center"
        android:padding="4dp"
        android:background="@null"
        android:text="100"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="@dimen/app_text_small"
        />

    <Button
        android:id="@+id/bt_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_content"
        android:layout_toLeftOf="@id/bt_hehe"
        android:background="@null"
        android:textColor="@color/App_actvitytext_grey"
        android:drawableLeft="@drawable/list_article_zan"
        android:gravity="center"
        android:padding="4dp"
        android:text="100"
        android:textSize="@dimen/app_text_small"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/App_actvitytext_grey"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>