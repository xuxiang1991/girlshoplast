<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/App_backgroud_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.daocheng.girlshop.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/head_sculpture"
            imagecontrol:border_outside_color="@null"
            imagecontrol:border_thickness="0dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_head"
            android:padding="8dp"
            android:text="NICK"
            android:textColor="@color/text_light_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/iv_head"
            android:paddingLeft="8dp"
            android:text="2014-12-14"
            android:textColor="@color/text_light_grey"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="16dp"
        android:background="@drawable/bg_pao"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_dark"
            android:textSize="12sp"
            android:text="woshi d jladjlf jaldfa"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_voice"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:background="@drawable/ll_message"
            android:gravity="right|bottom"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:scaleType="center"
                android:background="@drawable/pk_icon_voice3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_voicesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ll_voice"
            android:text="3s"
            android:textColor="@color/text_light_grey"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_zan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:id="@+id/bt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_pinglun_zan_background"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="分享"
            android:visibility="gone"
            android:textColor="@color/App_actvitytext_grey"
            android:textSize="@dimen/app_text_small" />

        <CheckBox
            android:id="@+id/bt_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/select_pinglun_zan_background"
            android:drawableLeft="@drawable/select_zan"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:button="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text=" （100）"
            android:textColor="@color/select_zan_color"
            android:textSize="@dimen/app_text_small" />

        <TextView
            android:id="@+id/bt_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/bt_hehe"
            android:background="@drawable/select_pinglun_zan_background"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="评论 （100）"
            android:visibility="visible"
            android:textColor="@color/App_actvitytext_grey"
            android:textSize="@dimen/app_text_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/App_actvitytext_grey"></View>
</LinearLayout>