<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.daocheng.girlshop.view.RoundImageView
            android:id="@+id/iv_head1"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/head_sculpture"
            imagecontrol:border_outside_color="@color/App_layout_deliver"
            imagecontrol:border_thickness="0dp" />

        <TextView
            android:id="@+id/tv_head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="11111"
            android:textColor="@color/App_actvitytext_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.daocheng.girlshop.view.RoundImageView
            android:id="@+id/iv_head2"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/head_sculpture"
            imagecontrol:border_outside_color="@color/App_layout_deliver"
            imagecontrol:border_thickness="0dp" />

        <TextView
            android:id="@+id/tv_head2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="11111"
            android:textColor="@color/App_actvitytext_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.daocheng.girlshop.view.RoundImageView
            android:id="@+id/iv_head3"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/head_sculpture"
            imagecontrol:border_outside_color="@color/App_layout_deliver"
            imagecontrol:border_thickness="0dp" />

        <TextView
            android:id="@+id/tv_head3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="11111"
            android:textColor="@color/App_actvitytext_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.daocheng.girlshop.view.RoundImageView
            android:id="@+id/iv_more"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/person_more"
            imagecontrol:border_outside_color="@color/App_layout_deliver"
            imagecontrol:border_thickness="0dp" />

        <TextView
            android:id="@+id/tv_head4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="11111"
            android:textColor="@color/App_actvitytext_grey"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>