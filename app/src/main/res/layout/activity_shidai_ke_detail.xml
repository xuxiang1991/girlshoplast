<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_top"></include>

    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:text="宾语从句学习"
        android:textColor="@color/App_calendar_big"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="match_parent"
        android:layout_height="24dp"

        android:layout_below="@id/tv_name_title"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="宾语从句学习"
            android:textColor="@color/text_light_grey"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@drawable/white_bg"
            android:button="@null"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Yolanda"
            android:textColor="@color/text_light_grey"

            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_end"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/rl_start"
        android:paddingLeft="16dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="宾语从句学习"
            android:textColor="@color/text_light_grey"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@drawable/white_bg"
            android:button="@null"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Yolanda"
            android:textColor="@color/text_light_grey"

            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_level"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/rl_end"
        android:paddingLeft="16dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="宾语从句学习"
            android:textColor="@color/text_light_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_toRightOf="@id/tv_level"
            android:gravity="center_vertical"
            android:text="宾语从句学习"
            android:textColor="@color/text_light_grey"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_level"
        android:layout_marginTop="10dp"
        android:background="@color/App_actvitytext_grey"></View>

    <LinearLayout
        android:id="@+id/ll_dingnum"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_keding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="可定\n21"
            android:textColor="@color/text_light_dark"
            android:textSize="16sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_level"
            android:background="@color/App_actvitytext_grey"></View>

        <TextView
            android:id="@+id/tv_yiding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已定\n21"
            android:textColor="@color/text_light_dark"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/ll_dingnum"
        android:background="@color/App_backgroud_grey"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="已订课学员"
        android:textColor="@color/text_light_dark"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_student"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/tv_info"
        android:background="@drawable/white_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="学号"
                android:textColor="@color/text_light_grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="中文名"
                android:textColor="@color/text_light_grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="英文名"
                android:textColor="@color/text_light_grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="center"
                android:text="手机号"
                android:visibility="gone"
                android:textColor="@color/text_light_grey"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/App_actvitytext_grey"></View>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_student"
        android:layout_marginBottom="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_main_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_bg"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_yy_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/App_calendar_big"
        android:gravity="center"
        android:text="立即预定"
        android:textColor="@color/white"
        android:textSize="24sp" />
</RelativeLayout>