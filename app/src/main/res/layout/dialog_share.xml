<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分  享"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="@dimen/app_text_big" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/App_actvitytext_grey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/s_wx"
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:drawableTop="@drawable/umeng_socialize_wechat"
            android:text="微信"
            android:gravity="center"
            android:background="@drawable/white_bg"
            android:textSize="14sp"
            android:textColor="@color/App_actvitytext_grey"/>

        <TextView
            android:id="@+id/s_wxcircle"
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="朋友圈"
            android:background="@drawable/white_bg"
            android:textSize="14sp"
            android:textColor="@color/App_actvitytext_grey"
            android:drawableTop="@drawable/umeng_socialize_wxcircle" />
        <TextView
            android:id="@+id/s_qq"
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:padding="4dp"
            android:text="QQ好友"
            android:gravity="center"
            android:background="@drawable/white_bg"
            android:textSize="14sp"
            android:textColor="@color/App_actvitytext_grey"
            android:drawableTop="@drawable/umeng_socialize_qq_on" />
        <TextView
            android:id="@+id/s_sina"
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="微博"
            android:background="@drawable/white_bg"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="@color/App_actvitytext_grey"
            android:drawableTop="@drawable/umeng_socialize_sina_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!--<Button-->
            <!--android:id="@+id/s_qq"-->
            <!--android:layout_width="68dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:padding="4dp"-->
            <!--android:text="QQ好友"-->
            <!--android:gravity="center"-->
            <!--android:background="@drawable/white_bg"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="@color/App_actvitytext_grey"-->
            <!--android:drawableTop="@drawable/umeng_socialize_qq_on" />-->

        <TextView
            android:id="@+id/s_qzone"
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:padding="4dp"
            android:gravity="center"
            android:text="QQ空间"
            android:background="@drawable/white_bg"
            android:textSize="14sp"
            android:textColor="@color/App_actvitytext_grey"
            android:drawableTop="@drawable/umeng_socialize_qzone_on" />

        <ImageView
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:background="@drawable/white_bg"></ImageView>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:background="@drawable/white_bg"></ImageView>

    </LinearLayout>

    <ImageView
        android:id="@+id/s_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_cancel" />
</LinearLayout>