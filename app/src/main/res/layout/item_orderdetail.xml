<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/shape_stoke">
    <ImageView
        android:id="@+id/iv_good_img"
        android:layout_width="100dp"
        android:layout_height="76dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_good_img"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/App_order_name"
            android:textSize="16sp"/>





    </LinearLayout>

    <TextView
        android:id="@+id/tv_good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_good_img"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:textColor="@color/App_back_orange"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/App_back_orange"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>