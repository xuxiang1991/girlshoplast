<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_backgroud_grey">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_top"></include>

    <include
        android:id="@+id/fresh_list"
        layout="@layout/fresh_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_marginBottom="48dp"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/App_back_orange"
        android:layout_alignParentBottom="true"
        >
        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:paddingLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_commment_txt"
            />
        <ImageView
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/comment_send"/>

    </LinearLayout>
</RelativeLayout>