<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white"/>
            <corners
                android:radius="5px"/>
            <stroke android:width="1px" android:color="@color/App_back_orange"/>
        </shape>
    </item>
    <item android:state_window_focused="false">
        <shape>
            <solid android:color="@color/white"/>
            <corners
                android:radius="5px"/>
            <stroke android:width="1px" android:color="@color/App_layout_stoke"/>
        </shape>
    </item>
</selector>